page{
    height: 100%;
    background-color: rgb(243, 243, 243);
}
.company-container{
    overflow: auto;
    box-sizing: border-box;
}
.wrapper{
    width: 100%;
}
.company-header{
    display: flex;
    border-bottom: 1rpx solid #ddd;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff
}
.company-tabs{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center
}
.active{
    color: rgb(73, 159, 228);
    background-color: rgb(239, 247, 253)
}
/* 水平分布 */
.info-item-h{
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    align-items: center;
    background-color: #fff;
    padding: 0 20rpx;
}
.info-h{
    width: 200rpx;
}
.info-text{
    flex: 1;
    margin-left: 5rpx;
}
/* 垂直分布 */
.info-v{
    height: 90rpx;
    line-height: 90rpx;
    background-color: rgb(243, 243, 243);
    padding: 0 20rpx;
}
.info-v-text{
    width: 100%;
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box
}
/* 图片处理 */
.info-img{
    height: 230rpx;
    box-sizing: border-box;
    padding: 30rpx;
    display: flex;
}
.info-img-list,.info-img-add{
    width:180rpx;
    height: 180rpx;
    border-radius: 1rpx;
    margin-left: 10rpx;
    position: relative;
    border:1rpx solid rgb(204, 204, 204);
}
.info-img-list image{
    width: 100%;
    height: 100%;
}
.info-img-close{
    position:absolute;
    right:-16rpx;
    top:-17rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    width:45rpx;
    height:45rpx;  
}
.info-img-add{
    font-size:75rpx;
    text-align:center;
    line-height: 180rpx;

}
.personal-btn-area{
    width: 90%;
    margin: 0 auto;
    margin-top: 30rpx;
    background-color: rgb(82, 162, 233);
    border-radius: 10rpx;
    box-shadow: 0px 0 8px rgb(82, 162, 233);
    margin-bottom: 50rpx;
}
.personal-btn{
    background-color: rgb(82, 162, 233)
}

/* 企业产品 */
.prod-list{
    width: 100%;
    display: flex;
    background-color: #fff;
    flex-direction: column;
    font-size: 32rpx;
    margin-top: 10rpx;
}
.prod-top{
    display: flex;
    flex-direction: row;
    height: 160rpx;
    align-items: center;
    padding: 15rpx 30rpx;
    border-bottom: 1rpx solid #ddd;
    box-sizing: border-box;

}
.prod-img{
    width: 180rpx;
    height: 100%;
}
.prod-img image{
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}
.prod-content{
    flex: 1;
    margin-left: 20rpx;
    height: 100%;
}
.prod-title{
    height: 40rpx;
}
.prod-desc{
    flex: 1;
    font-size: 28rpx;
}
.prod-bottom{
    display: flex;
    padding: 0 30rpx;
    height: 78rpx;
}
.prod-pay{
    width: 180rpx;
    line-height: 78rpx;
}
.prod-btns{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.prod-btn{
    padding:5rpx 20rpx;
    border-radius:10rpx;
    height:45rpx;
    text-align:center;
    margin-left:16rpx;
}
.prod-del{
    border: 1rpx solid  rgb(210, 210, 210)
}
.prod-modfiy{
    background-color: rgb(82, 162, 233)
}
.prod-btn-wrapper{
    display: flex;
    margin-top: 30rpx;
    margin-bottom: 50rpx;
}
.prod-cancel{
    background: #ddd
}
.prod-btn-wrapper button{
    box-sizing: border-box;
    width: 100%;
    border-radius: 0;
    padding: 0;
    margin: 0;
}
.prod-btn-wrapper button::after{
    border: none
}