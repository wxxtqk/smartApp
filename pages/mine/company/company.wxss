.company-container{
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background-color: rgb(243, 243, 243)
}
.wrapper{
    width: 100%;
}
.company-header{
    display: flex;
    border-bottom: 1rpx solid #ddd;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff
}
.company-tabs{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center
}
.active{
    color: rgb(73, 159, 228);
    background-color: rgb(239, 247, 253)
}
/* 水平分布 */
.info-item-h{
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    align-items: center;
    background-color: #fff;
    padding: 0 20rpx;
}
.info-h{
    width: 200rpx;
}
.info-text{
    flex: 1;
    margin-left: 5rpx;
}
/* 垂直分布 */
.info-v{
    height: 90rpx;
    line-height: 90rpx;
    background-color: rgb(243, 243, 243);
    padding: 0 20rpx;
}
.info-v-text{
    width: 100%;
    background-color: #fff;
    padding: 0 20rpx;
}
/* 图片处理 */
.info-img{
    height: 230rpx;
    box-sizing: border-box;
    padding: 30rpx;
    display: flex;
}
.info-img-list,.info-img-add{
    width:180rpx;
    height: 180rpx;
    border-radius: 1rpx;
    margin-left: 6rpx;
    position: relative;
    border:1rpx solid rgb(204, 204, 204);
}
.info-img-list image{
    width: 100%;
    height: 100%;
}
.info-img-close{
    position: absolute;
    right: 0;
    top: 0;
    color: brown;
    background: red;
    width:30rpx;
    height:20rpx;

}
.info-img-add{
    font-size:75rpx;
    text-align:center;
    line-height: 180rpx;

}
.personal-btn-area{
    width: 90%;
    margin: 0 auto;
    margin-top: 30rpx;
    background-color: rgb(82, 162, 233);
    border-radius: 10rpx;
    box-shadow: 0px 0 8px rgb(82, 162, 233);
    margin-bottom: 50rpx;
}
.personal-btn{
    background-color: rgb(82, 162, 233)
}