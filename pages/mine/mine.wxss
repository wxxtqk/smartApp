.mine-container{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: rgb(239, 239, 244)
}
.mine-header{
  width: 120%;
  position: relative;
  padding-top: 40%;
  background-color: #499FE4;
  border-radius: 0 0 50% 50%;
  margin-top: 1px;
  box-shadow: 0px 0px 15px #888888;
  left: -10%;
}
.mine-header-wrapper{
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  transform:translate3d(-70rpx, -70rpx ,0);
  left: 50%;
  border-radius: 50%;
  box-shadow: 0px 0px 15px #888888;
  border: 5px solid rgb(243, 243, 243);
}
.mine-avatar{
  width: 100%;
  height: 100%;
  border-radius:50%;
}
.mine-btn-login{
  display: inline-block;
  position: relative;
  top: 120rpx;
  left: 50%;
  transform:translate3d(-50%, 0 ,0);
  padding: 9rpx 35rpx;
  border-radius: 4rpx;
  background-color: rgb(254, 254, 254)
}
.mine-items{
  position: relative;
  top: 250rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 10rpx
}
.mine-item{
  display: flex;
  flex-direction: row;
  padding: 6rpx 0;
  height: 50rpx;
}
.mine-item-left{
  width: 50rpx;
  height: 100%;
}
.mine-item-title{
  flex: 1;
  margin-left: 5rpx;
}
.mine-item-right{
  width: 50rpx;
}
.mine-btn-nickname{
  color: #aaa;
  background-color: rgb(239, 239, 244)
}