/* 购买课程 */

 @import "../../../component/curriculum/curriculum.wxss"; 
.purchase-package{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  flex-direction: column;
  background-color:rgb(239, 239, 244);
}
.bg-white {
  background-color: #fff;
}
.margin10 {
  margin-bottom: 20rpx;
}
.purchase-package-padding {
    padding:60rpx 48rpx;
}
/*音频标题  */
.purchase-title {
  font-size: 42rpx;
  font-weight: bold;
  padding-bottom: 62rpx;
}
/*封面  */
.cover-image{
  width: 364rpx;
  height: 284rpx;
  background-color: rgb(247,247,247);
}
/*推荐人  */
.purchase-people{
  padding-top:84rpx;
}
/* 折扣价  */
.discount {
  width:308rpx;
  padding:30rpx 20rpx;
  font-size:32rpx;
  background-color:rgb(233,246,254);
  border-radius:6rpx;
  color:rgb(72, 159, 228);
  margin-top: 44rpx;
}
.positive-price {
  font-size:28rpx;
  color:rgb(153,161,166);
  padding-top:20rpx;
  text-decoration:line-through;

}


/*课程介绍 */
.purchase-content-title {
  font-size: 32rpx;
  color: rgb(141,141,141);
  font-weight: bold;
  padding-bottom:24rpx;
  border-bottom:4rpx solid rgb(238,238,238);
}
.purchase-content-details{
  padding: 24rpx 0;
}
.margin50 {
  margin-bottom: 100rpx;
}

/* 立即咨询  */
.consultation {
  position: fixed;
  /* left: 0;
  right: 0;
  top: 0; */
  bottom: 0;
  height: 100rpx;
  width:100%;
  background-color:rgb(73, 159, 228);
  color:white;
  font-size: 36rpx;
}
.consultation > button {
  width: 100%;
  height: 100%;
  border: none;
  color: #fff;
  
}
